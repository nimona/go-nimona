package example/chat

import example/crypto crypto
import example/stream stream

stream mochi.io/conversation {
    root object Created {
        name string
    }
    object TopicUpdated {
        topic string
    }
    object MessageAdded {
        message mochi.io/message
    }
    object MessageRemoved {
        message mochi.io/message
    }
}

stream mochi.io/message {
    root object Created {
        body string
    }
}
